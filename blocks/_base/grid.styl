.container
  margin 0 auto
  box-sizing border-box
  display flex
  width 1170px

// container(align = space-between, wrap = wrap)
  // @extends .container
  // justify-content: align
  // flex-wrap: wrap

cont()
  // @extends .container
  justify-content space-between
  flex-wrap: wrap

cols = 12
gutter = 30px

col(num)
  width: "calc( (((100% - (%s * (%s - 1))) / %s) * %s) + ( %s * (%s - 1)) )" % (gutter cols cols num gutter num) 

flex-center()
  display flex
  justify-content center
  align-items center

.wrapper
  display: flex
  flex-direction: column
  height: 100%
  min-height: 320px
  max-height: 1920px

.section
  position: relative
  padding: 40px 0

.svg-icon
  display: inline-block
  width: 1em
  height: 1em
  stroke-width: 0
  stroke: currentColor
  fill: currentColor
