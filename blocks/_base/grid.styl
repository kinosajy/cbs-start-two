xxs = "(min-width: 320px)"
xs = "(min-width: 480px)"
sm = "(min-width: 767px)"
_sm = "(max-width: 767px)"
md = "(min-width: 1024px)"
_md = "(max-width: 1024px)"
lg = "(min-width: 1200px)"
xlg = "(min-width: 1500px)"

.container
  margin 0 auto
  box-sizing border-box
  display flex
  @media xxs
    width: 100%
    padding: 0 15px
  @media sm
    width: 750px
  @media md
    width: 970px
  @media lg
    width: 1170px

// container(align = space-between, wrap = wrap)
  // @extends .container
  // justify-content: align
  // flex-wrap: wrap

cont()
  // @extends .container
  justify-content space-between
  flex-wrap: wrap

cols = 12
gutter = 30px

col(num)
  width: "calc( (((100% - (%s * (%s - 1))) / %s) * %s) + ( %s * (%s - 1)) )" % (gutter cols cols num gutter num) 

flex-center()
  display flex
  justify-content center
  align-items center

.wrapper
  display: flex
  flex-direction: column
  height: 100%
  min-height: 320px
  max-height: 1920px

.section
  position: relative
  padding: 40px 0

.svg-icon
  display: inline-block
  width: 1em
  height: 1em
  stroke-width: 0
  stroke: currentColor
  fill: currentColor
